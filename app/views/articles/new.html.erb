<% content_for :page_title, "Create New Article" %>
  
<div class="section">

<%= simple_form_for @article do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.button :submit, 'Create new Article', class: "button is-primary" %>
<% end %>
</div>
  

<%= link_to 'Back', articles_path %>