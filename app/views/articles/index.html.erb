<% content_for :page_title, "Index" %>

<section class="section">
<div class="section">
	<div class="container">
		<% @articles.each do |article| %>
			<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to article.title, article  %></p>
		      </div>
		    </div>
		    <div class="content">
		     	<%= article.content %>
		    </div>
		    
		  </div>
		</div>
		<% end %>
	</div>
</div>
</section>