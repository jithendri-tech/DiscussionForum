<% content_for :page_title, "Index" %>

<section class="section">

<div class="section">
    
     <div class="level-right">
		  	<p class="level-item">

			    <%= form_tag search_articles_path, method: :get do %>
           <%= text_field_tag :search, nil, placeholder: "Enter text to search", class: "form-control mr-2" %>
         <%= submit_tag "Search", class: "btn-flat my-3 my-0" %>
            <% end %>
		  	</p>
		  </div>
	<div class="container">
		<% @articles.each do |article| %>
			<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to article.title, article  %></p>
		      </div>
		    </div>
		    <div class="content">
		     	<%= article.content %>
		    </div>
		    
		  </div>
		</div>
		<% end %>
	</div>
</div>

<%= link_to 'Back to all Articles', articles_path %>
</section>